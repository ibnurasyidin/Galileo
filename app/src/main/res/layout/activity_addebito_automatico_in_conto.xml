<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

   <include
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       layout="@layout/action_bar"/>


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadingEdge="none"
            android:fadingEdgeLength="0dp"
            android:overScrollMode="never"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_marginVertical="27dp"
               android:layout_marginHorizontal="15dp"
               android:orientation="vertical">


               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@drawable/bgx_circle_grape_dark"
                   android:src="@drawable/ic_refresh"
                   android:padding="12dp"/>
               <TextView
                   android:layout_width="258dp"
                   android:layout_height="wrap_content"
                   android:text="Addebito automatico in conto"
                   android:textSize="24dp"
                   android:fontFamily="@font/sofia_pro_regular"
                   android:textColor="@color/text_black_5a5a"
                   android:layout_marginTop="@dimen/dimen_15"
                   android:layout_marginBottom="45dp"/>

               <EditText
                   android:layout_width="match_parent"
                   android:layout_height="50dp"
                   android:hint="Nome Banca"
                   android:textSize="18sp"
                   android:textColorHint="#b7b7b7"
                   android:background="@drawable/bg_ln_edittext_nonactive" />


               <EditText
                   android:layout_width="match_parent"
                   android:layout_height="50dp"
                   android:hint="Numero di conto"
                   android:textSize="18sp"
                   android:textColorHint="#b7b7b7"
                   android:layout_marginTop="47dp"
                   android:background="@drawable/bg_ln_edittext_nonactive" />

               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Richiedi modulo via email"
                   android:textColor="#0d0d0d"
                   android:fontFamily="@font/sofia_pro_regular"
                   android:textSize="15sp"
                   android:layout_marginTop="47dp"/>





           </LinearLayout>

        </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>