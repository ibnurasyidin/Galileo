<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AttivazioneActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:background="@drawable/bg_gradient" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/logo_white" />

        <LinearLayout
            android:id="@+id/Main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_white_rounded"
            android:elevation="5dp"
            android:orientation="vertical"
            android:paddingVertical="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:fontFamily="@font/sofia_pro_regular"
                android:text="Modifica i tuoi dati"
                android:textColor="@color/text_black"
                android:textSize="20sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/sofia_pro_regular"
                android:text="Modifica qui i tuoi dati, una volta aggiornati attendi la nostra conferma"
                android:textColor="@color/text_black"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="50dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"

                    android:fontFamily="@font/sofia_pro_regular"
                    android:text="Nome e Cognome"
                    android:textColor="@color/text_gray"
                    android:textSize="16sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Andrea Giordano"
                    android:textSize="18sp"
                    android:textColorHint="@color/text_black"
                    android:layout_marginHorizontal="15dp"
                    android:background="@drawable/bg_ln_edittext" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"

                    android:fontFamily="@font/sofia_pro_regular"
                    android:text="Indirizzo di fatturazione"
                    android:textColor="@color/text_gray"
                    android:textSize="16sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Via Giare nÂ°14, 37030 Mezzane di sot"
                    android:textSize="18sp"
                    android:textColorHint="@color/text_black"
                    android:layout_marginHorizontal="15dp"
                    android:background="@drawable/bg_ln_edittext_nonactive" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"

                    android:fontFamily="@font/sofia_pro_regular"
                    android:text="Telefono"
                    android:textColor="@color/text_gray"
                    android:textSize="16sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="32 014 84 84 44"
                    android:textSize="18sp"
                    android:textColorHint="@color/text_black"
                    android:layout_marginHorizontal="15dp"
                    android:background="@drawable/bg_ln_edittext_nonactive" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="15dp"

                    android:fontFamily="@font/sofia_pro_regular"
                    android:text="Email"
                    android:textColor="@color/text_gray"
                    android:textSize="16sp" />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="andrea.giordano52@gmail.com"
                    android:textSize="18sp"
                    android:textColorHint="@color/text_black"
                    android:layout_marginHorizontal="15dp"
                    android:background="@drawable/bg_ln_edittext_nonactive" />


            </LinearLayout>




        </LinearLayout>
        <LinearLayout
            android:layout_below="@id/Main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="Annulla"
                android:fontFamily="@font/sofia_pro_regular"
                android:textColor="@color/text_gray"
                android:textSize="16sp"/>

            <Button
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/bg_stroke_green_rounded"
                android:fontFamily="@font/sofia_pro_regular"
                android:text="Salva"

                android:textSize="16sp"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:layout_weight="0" />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>