<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dialog.DialogVerifica">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dimen_15"
        android:background="@color/white"
        android:gravity="center"
        android:padding="25dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_close" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dimen_15"
            android:fontFamily="@font/sofia_pro_regular"
            android:text="Ciao Andrea,"

            android:textColor="@color/text_black_5a5a"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_15"
            android:fontFamily="@font/open_sans_regular"
            android:text="se vuoi effettuare lo speed test
assicurati che il dispositivo con il quale
intendi farlo sia l'unico presente nella
tua rete domestica, in modo da non
alterarne l'esito."

            android:textColor="@color/text_black_5a5a"
            android:textSize="14dp" />

        <Button
            android:layout_below="@id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Avvia il test"
            android:textAllCaps="false"
            android:background="@drawable/bgx_edge_green"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"/>

    </LinearLayout>

</RelativeLayout>