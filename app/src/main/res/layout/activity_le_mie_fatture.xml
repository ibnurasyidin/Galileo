<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/action_bar"/>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:fadingEdgeLength="0dp"
        android:overScrollMode="never"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="27dp"
                android:layout_marginHorizontal="15dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="258dp"
                    android:layout_height="wrap_content"
                    android:text="Le mie fatture"
                    android:textSize="24dp"
                    android:fontFamily="@font/sofia_pro_regular"
                    android:textColor="@color/text_black_5a5a"
                    android:layout_marginTop="@dimen/dimen_15"
                    android:layout_marginBottom="28dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black_5a5a"
                    android:text="Giugno"
                    android:fontFamily="@font/sofia_pro_regular"
                    android:textSize="16sp"
                    android:layout_marginBottom="17dp"/>






                <include
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="13dp"
                    layout="@layout/single_list_fattura"/>


                <include
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/single_list_fattura"/>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_black_5a5a"
                    android:text="Maggio"
                    android:layout_marginTop="32dp"
                    android:fontFamily="@font/sofia_pro_regular"
                    android:textSize="16sp"
                    android:layout_marginBottom="17dp"/>






                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:background="@drawable/bgx_rectangle_grey"
                    android:baselineAligned="false"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal">



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="2"
                                android:text="Fattura n° 64885"
                                android:textSize="13sp"
                                android:textColor="@color/text"
                                android:fontFamily="@font/sofia_pro_semi_bold"
                                android:paddingHorizontal="@dimen/dimen_15"
                                android:paddingVertical="21dp"
                                android:drawableRight="@drawable/ic_round_arrow_forward_ios_24"
                                />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="#f3f3f3"
                                android:layout_marginHorizontal="3dp"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginHorizontal="@dimen/dimen_15">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="EMESSA"
                                        android:fontFamily="@font/sofia_pro_regular"
                                        android:textSize="10sp"
                                        android:textColor="#5a5a5a"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Apr 22, 2020 12:39 PM"
                                        android:fontFamily="@font/sofia_pro_regular"
                                        android:textSize="10sp"
                                        android:textColor="#5a5a5a"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="SCADENZA"
                                        android:fontFamily="@font/sofia_pro_regular"
                                        android:textSize="10sp"
                                        android:textColor="#5a5a5a"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Mag 15, 2020 10:15 PM"
                                        android:fontFamily="@font/sofia_pro_regular"
                                        android:textSize="10sp"
                                        android:textColor="#5a5a5a"/>
                                </LinearLayout>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="15dp"
                                    android:layout_gravity="center_vertical"
                                    android:text="84,11€"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/dimen_15"
                                android:paddingTop="21dp"
                                android:paddingBottom="18dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Scaduta"
                                    android:fontFamily="@font/sofia_pro_regular"
                                    android:textSize="14sp"
                                    android:layout_weight="1"
                                    android:textColor="#ff3400"/>

                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/bgx_button_grape"
                                    android:text="Seleziona"
                                    android:textAllCaps="false"
                                    android:visibility="gone"
                                    android:textColor="@color/grapeDark"/>

                            </LinearLayout>

                        </LinearLayout>



                    </LinearLayout>




                </RelativeLayout>


            </LinearLayout>






    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>