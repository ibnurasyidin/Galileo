<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

   <include
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       layout="@layout/action_bar"/>


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadingEdge="none"
            android:fadingEdgeLength="0dp"
            android:overScrollMode="never"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_marginHorizontal="@dimen/dimen_15">


               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Diagnostica Linea"
                   android:textSize="24sp"
                   android:fontFamily="@font/sofia_pro_regular"
                   android:textColor="@color/text_black"
                   android:layout_marginTop="31dp"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="In questa Area puoi ricevere consigli utili, verificare la tua linea fisse e lo stato delle tue segnalazioni."
                   android:textSize="14sp"
                   android:fontFamily="@font/sofia_pro_regular"
                   android:textColor="@color/text_black_5a5a"
                   android:layout_marginTop="13dp"/>

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Avvertenze"
                   android:textSize="16sp"
                   android:fontFamily="@font/sofia_pro_regular"
                   android:textColor="@color/text_black_5a5a"
                   android:layout_marginTop="17dp"/>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@color/red"
                   android:layout_marginTop="17dp">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="In questa Area puoi ricevere consigli utili, verificare la tua linea fisse e lo stato delle tue segnalazioni."
                       android:textSize="14sp"
                       android:fontFamily="@font/sofia_pro_regular"
                       android:textColor="@color/text_black_5a5a"
                       android:background="@color/bg_grayf5f5"
                       android:paddingVertical="26dp"
                       android:paddingRight="14dp"
                       android:paddingLeft="28dp"
                       android:layout_marginLeft="6dp"/>

               </LinearLayout>

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="26dp"
                   android:background="@drawable/bgx_edge_white"
                   android:paddingHorizontal="21dp"
                   android:paddingTop="20dp"
                   android:paddingBottom="29dp"
                   android:elevation="1dp"
                   >

                   <ImageView
                       android:id="@+id/ic_wifi"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:background="@drawable/bgx_cirlce_grape"
                       android:src="@drawable/ic_wifi"
                       android:padding="@dimen/dimen_15"
                       android:layout_gravity="center"
                       android:layout_marginBottom="@dimen/dimen_15"
                       android:layout_alignParentTop="true"
                       android:layout_marginRight="23dp"
                       />

                   <TextView
                       android:id="@+id/title"
                       android:layout_toRightOf="@id/ic_wifi"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="DIAGNOSTICA"
                       android:fontFamily="@font/sofia_pro_semi_bold"
                       android:textSize="13sp"
                       android:layout_marginTop="16dp"
                       android:textColor="@color/grapeDark"/>

                   <TextView
                       android:id="@+id/tv_description"
                       android:layout_toRightOf="@id/ic_wifi"
                       android:layout_below="@id/title"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Test e consigli per gestire la tua linea"
                       android:fontFamily="@font/sofia_pro_regular"
                       android:textSize="13sp"
                       android:layout_marginTop="2dp"
                       android:textColor="@color/text_black"/>

                   <Button
                       android:id="@+id/btn_avvio"
                       android:layout_below="@id/tv_description"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="Avvio test linea"
                       android:textAllCaps="false"
                       android:background="@drawable/bgx_edge_green"
                       android:textColor="@color/white"
                       android:layout_marginTop="27dp"/>





               </RelativeLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="26dp"
                   android:background="@drawable/bgx_edge_white"
                   android:paddingHorizontal="21dp"
                   android:paddingTop="23dp"
                   android:paddingBottom="19dp"
                   android:elevation="1dp"
                   android:gravity="center">

                   <TextView


                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Apri nuovo ticket"
                       android:fontFamily="@font/sofia_pro_regular"
                       android:textSize="16sp"

                       android:textColor="@color/grapeDark"/>



               </LinearLayout>


           </LinearLayout>

        </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>