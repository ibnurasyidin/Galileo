<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="2dp"
    android:background="@color/white"
    android:baselineAligned="false"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_15"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/parent_layout"
            android:layout_width="32dp"
            android:layout_height="37dp"
            android:layout_marginRight="@dimen/dimen_15"
            app:cardElevation="0dp"
            android:layout_gravity="center"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/imv_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:background="@drawable/bgx_edge_image"
                android:src="@drawable/ic_pdf"
                android:adjustViewBounds="true"
                />
        </androidx.cardview.widget.CardView>

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="Modulo per iscrizioneal pagamento"
            android:textSize="14sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_weight="1"
            android:lineHeight="17dp"
            android:fontFamily="@font/sofia_pro_regular"
            />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="2"
            android:text="Richiedi"
            android:textSize="14sp"
            android:textColor="#717171"
            android:layout_weight="1"
            android:gravity="center"
            android:fontFamily="@font/sofia_pro_semi_bold"
            />





    </LinearLayout>




</RelativeLayout>
